{
    "name":        "genj/thumbnail-bundle",
    "type":        "symfony-bundle",
    "description": "Uses Liip/ImagineBundle and generates SEO-friendly thumbnail-names",
    "keywords":    ["genj", "thumbnail", "symfony2", "bundle"],
    "homepage":    "http://github.com/genj/GenjThumbnailBundle",
    "license":     "MIT",

    "authors": [
        {
            "name":  "Choong Wei Tjeng",
            "email": "choong.wei.tjeng@genj.nl"
        },
        {
            "name":  "Nico Kaag",
            "email": "nico.kaag@genj.nl"
        },
        {
            "name":  "Susan Lau",
            "email": "susan.lau@genj.nl"
        }
    ],

    "require": {
        "symfony/symfony": ">=2.5|~3.0",
        "sensio/framework-extra-bundle": "~3.0",
        "vich/uploader-bundle": "~0|~1",
        "liip/imagine-bundle": "dev-master"
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "dev",

    "autoload": {
        "psr-0": {
            "Genj\\ThumbnailBundle\\": "src/"
        }
    }
}
